<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Mystery Word Game</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <header>
    <div class="headerSpace">
      <h1>Mystery Word</h1>
      <p id="guessesRemaining">You have
        {{#guesses}}{{.}}{{/guesses}} guesses remaining.</p>
    </div>
  </header>

  <section id="word">
    {{#wordGuess}}
      {{.}}
    {{/wordGuess}}
  </section>

  <section id="input">
    {{#if guesses}}
      <form class="guess" action="/guess" method="post">
        <input type="text" name="letter" placeholder="Enter guess here" autofocus>
        <button id="guessButton">Make a guess</button>
      </form>
      <!-- If player runs our of guesses. -->
    {{else}}
      <p id="loser">You Loose!!!</p>
      <form class="reset" action="/reset" method="post">
        <button>Try again</button>
      </form>
    {{/if}}
  </section>

  <section id="error">
    {{error}}
  </section>

  <section id="lettersGuessed">
    <p>Letters guessed:
      {{#if wrongLetters}}
        {{#wrongLetters}}
          {{.}}
        {{/wrongLetters}}
      {{else}}
        None
      {{/if}}

    </p>
  </section>


</body>

</html>
